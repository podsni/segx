{
  "name": "segx",
  "version": "0.1.0",
  "description": "Segx CLI untuk mengelola script otomatis dengan antarmuka interaktif",
  "repository": {
    "type": "git",
    "url": "https://github.com/podsni/segx.git"
  },
  "homepage": "https://github.com/podsni/segx",
  "bugs": {
    "url": "https://github.com/podsni/segx/issues"
  },
  "type": "module",
  "bin": {
    "segx": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "VERSION"
  ],
  "scripts": {
    "dev": "bun index.ts",
    "generate:embedded": "bun tools/generate-embedded-scripts.ts",
    "version:sync": "bun tools/sync-version.ts",
    "build": "bun run generate:embedded && bunx tsup --config tsup.config.ts",
    "check": "bunx tsc --noEmit",
    "release": "bun run version:sync && bun run check && bun run build"
  },
  "keywords": [
    "cli",
    "scripts",
    "automation"
  ],
  "author": "Bangunx",
  "license": "MIT",
  "engines": {
    "node": ">=18",
    "bun": ">=1.0"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "tsup": "^8.5.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "publishConfig": {
    "access": "public"
  }
}
